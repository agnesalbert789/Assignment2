@model GeorgianCollege.Models.Attachment

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete Attachment</h1>

<h3 class="text-danger">Are you sure you want to delete this?</h3>
<div class="border p-3">
    <h4>Attachment Details</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Ticket)</dt>
        <dd class="col-sm-9">@Html.DisplayFor(model => model.Ticket.TicketId)</dd>

        <dt class="col-sm-3">@Html.DisplayNameFor(model => model.FileType)</dt>
        <dd class="col-sm-9">@Html.DisplayFor(model => model.FileType)</dd>

        <dt class="col-sm-3">@Html.DisplayNameFor(model => model.UploadedAt)</dt>
        <dd class="col-sm-9">@Html.DisplayFor(model => model.UploadedAt)</dd>

        @if (Model.FileData != null && Model.FileData.Length > 0)
        {
            <dt class="col-sm-3">File</dt>
            <dd class="col-sm-9">
                <a asp-action="DownloadFile" asp-route-id="@Model.AttachmentId" class="btn btn-link">Download</a>
            </dd>
        }
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="AttachmentId" />
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-action="Index" class="btn btn-secondary">Back to List</a>
    </form>
</div>
